package Soccer
;

public class SoccerPlayer {
	private String Name;
	private int Number;
	private String Team;
	private int Goal;
	private int YellowCard;
	private int RedCard;
	
	// constructor(s)
	public SoccerPlayer( ){
		
	}
	
	
	// setters
	public void assignYellowCard() {
		this.YellowCard=1;
	}
	
	public void assignRedCard() {
		this.RedCard=1;
	}
	
	// getters
	public int yellowCard() {
		return YellowCard;
	}
	
	// other methods
	public int getNumber(){
		return Number;
	}
	
	public void setNumber(int number){
		this.Number=Number;
		for(int i=1;i<12;i++){
			if(Number>i){
				break;
			}
		}
	}
	public String getName(){
		return Name;
	}
	

	public SoccerTeam getTeam(){
	this.Team=Team;
	return Team;
	}
}
