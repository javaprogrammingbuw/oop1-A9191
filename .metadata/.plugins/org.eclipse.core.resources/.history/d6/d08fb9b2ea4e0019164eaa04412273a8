package SoccerPlayer;

public class SoccerPlayer {
	private String Name;
	private int Number;
	private String Team;
	private int Goal;
	private int YellowCard;
	private int RedCard;
	
	// constructor(s)
	public SoccerPlayer( ){
		
	}
	
	// setters
	public void assignYellowCard() {
		this.YellowCard=1;
	}
	
	public void assignRedCard() {
		this.RedCard=1;
	}
	
	// getters
	public int yellowCard() {
		return YellowCard;
	}
	
	// other methods

}
